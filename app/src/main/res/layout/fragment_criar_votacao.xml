<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient1">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="titulo da votaçao e criador"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/Titulo"
        android:background="@drawable/roundborder">
    </EditText>

    <Spinner
        android:id="@+id/spinner_tipo_votacao"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:autofillHints="Escolha um tipo"
        android:entries="@array/tipos_votacao"
        android:background="@drawable/roundborder"/>

    <LinearLayout
        android:id="@+id/linear_criar_voto"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="descrição"
            android:textColorHint="@color/white"
            android:background="@drawable/roundborder2"/>
        <Spinner
            android:id="@+id/spinner_timer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/roundborder2"
            android:entries="@array/timer_options"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_enviar_voto"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/seta"
        android:onClick="cena">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>


